datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String    @id @default(uuid())
  name         String
  category     String
  priceCents   Int
  currency     String    @default("USD")
  imageUrl     String
  inStock      Boolean   @default(true)
  variants     Variant[]
  createdAt    DateTime  @default(now())
}

model Variant {
  id        String  @id @default(uuid())
  label     String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}